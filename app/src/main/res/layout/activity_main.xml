<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:text="Hello World!" />

    <TextView
        android:id="@+id/info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="18sp"
        android:text="Hello World!" />
    <Button
        android:id="@+id/btn_install_old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:text="old apk"
        android:onClick="installOld"/>
    <Button
        android:id="@+id/btn_diff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btn_install_old"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:text="apply diff"
        android:onClick="applyDiff"/>
    <Button
        android:id="@+id/btn_patch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btn_diff"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:text="apply patch"
        android:onClick="applyPatch"/>

</RelativeLayout>
